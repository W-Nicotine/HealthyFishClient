<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="157px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="40px"
        android:paddingTop="40px">

        <ImageView
            android:layout_width="48px"
            android:layout_height="58px"
            android:layout_marginLeft="48px"
            android:src="@mipmap/ic_nickname" />

        <EditText
            android:id="@+id/et_input_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:background="@null"
            android:hint="填写昵称"
            android:textColor="@color/color_hint"
            android:textSize="48px" />


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48px"
            android:layout_height="58px"
            android:layout_marginLeft="48px"
            android:src="@mipmap/ic_input_password"/>

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:hint="输入密码"
            android:background="@null"
            android:textSize="48px"
            android:textColor="@color/color_hint"/>


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48px"
            android:layout_height="58px"
            android:layout_marginLeft="48px"
            android:src="@mipmap/ic_verify_password"/>

        <EditText
            android:id="@+id/et_verify_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:background="@null"
            android:hint="验证密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/color_hint"
            android:textSize="48px" />

    </com.zhy.autolayout.AutoLinearLayout>
    
    <Button
        android:id="@+id/btn_next"
        android:layout_width="978px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130px"
        android:paddingBottom="35px"
        android:paddingTop="35px"
        android:background="@drawable/selector_4dp_btn_color_from_priamry_to_white"
        android:textSize="54px"
        android:textColor="@color/selector_text_color_from_white_to_primary"
        android:text="下一步"/>

</com.zhy.autolayout.AutoLinearLayout>
