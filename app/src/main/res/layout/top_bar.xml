<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/color_primary_dark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/topbar_scan"
        android:layout_width="57px"
        android:layout_height="53px"
        android:layout_marginLeft="32px"
        android:layout_marginTop="42px"
        android:background="@mipmap/scan" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="840px"
        android:layout_height="72px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="32px"
        android:background="@drawable/rounded_rectangle_white">

        <ImageView
            android:id="@+id/topbar_search_iv"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="15px"
            android:background="@mipmap/search" />

        <EditText
            android:id="@+id/topbar_search_et"
            android:layout_width="700px"
            android:layout_height="75px"
            android:layout_marginLeft="70px"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/color_general_and_title"
            android:textSize="35px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/topbar_info"
        android:clickable="true"
        android:layout_width="90px"
        android:layout_height="100px"
        android:layout_marginTop="10px">

        <ImageView

            android:layout_width="50px"
            android:layout_height="58px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="25px"
            android:background="@mipmap/info" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
